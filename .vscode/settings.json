{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.(lua|toc)$",
                "cmd": "xcopy \"${file}\" \"D:\\World of Warcraft\\_retail_\\Interface\\AddOns\\IsKeyDepleted\\\" /Y /Q && powershell -Command \"Write-Host 'âœ… Sync complete! File synced to WoW AddOns folder' -ForegroundColor Green\""
            }
        ]
    },
    "tasks.version": "2.0.0",
    "tasks.tasks": [
        {
            "label": "Sync to WoW",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "${workspaceFolder}\\*.lua",
                "D:\\World of Warcraft\\_retail_\\Interface\\AddOns\\IsKeyDepleted\\",
                "/Y"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c", "xcopy \"${workspaceFolder}\\*.lua\" \"D:\\World of Warcraft\\_retail_\\Interface\\AddOns\\IsKeyDepleted\\\" /Y && echo Lua files synced to WoW!"]
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Sync TOC to WoW",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "${workspaceFolder}\\*.toc",
                "D:\\World of Warcraft\\_retail_\\Interface\\AddOns\\IsKeyDepleted\\",
                "/Y"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Sync All Addon Files",
            "type": "shell",
            "command": "xcopy",
            "args": [
                "${workspaceFolder}\\*.{lua,toc}",
                "D:\\World of Warcraft\\_retail_\\Interface\\AddOns\\${workspaceFolderBasename}\\",
                "/Y"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
